@model MVCProject.Models.Student

@{
    Layout = "_Academic";
    ViewData["Title"] = "Update";

    SelectList tracks;
    if(Model !=null)
    {
        tracks = new SelectList(ViewBag.Trs,"Id","Name",Model.Track_Id);
    }
    else
    {
        tracks = new SelectList(ViewBag.Trs,"Id","Name");
    }
}

<div class="container mt-3">
    <h1>Update Student</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Update" asp-controller="Student" >
                <input asp-for="Id" type="hidden" class="form-control"/>
                @*<div asp-validation-summary="All" class="text-danger"></div>*@
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Age" class="control-label"></label>
                    <input asp-for="Age" class="form-control" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div>
            <label asp-for="Track_Id"></label>
            <select asp-for="Track_Id" asp-items="tracks" class="form-control"></select>
            <span class="text-danger" asp-validation-for="Track_Id"></span>
        </div>

             @*   <div class="form-group">
                    <label asp-for="Track_Id" class="control-label"></label>
                    <input asp-for="Track_Id" class="form-control" />
                    <span asp-validation-for="Track_Id" class="text-danger"></span>
                </div>*@

            @*    <div class="form-group">
                    <label asp-for="Inst_Id" class="control-label"></label>
                    <input asp-for="Inst_Id" class="form-control" />
                    <span asp-validation-for="Inst_Id" class="text-danger"></span>
                </div>*@
                <div class="form-group">
                    <input type="submit" value="Edit" class="btn btn-warning mt-2" />
                </div>
            </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
