@{
    Layout = "_Academic";
}
<div class="container mt-3">
    <h2>Show Student details</h2>
    <table class="table table-bordered">
        <tr>
            <th>Name</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>Age</th>
            <td>@Model.Age</td>
        </tr>
        <tr>
            <th>Track</th>
            <td>@Model.Track_Id</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>@Model.Address</td>
        </tr>
        <tr>
            <th>Phone Number</th>
            <td>@Model.PhoneNumber</td>
        </tr>
    </table>
    <a asp-action="GetAll" asp-controller="Student" class="btn btn-secondary">Back</a>
</div>
 

