@model List<Track>

<table class="table table-bordered">
    <thead>
        <tr>
            <th style="text-align: center">Id</th>
            <th style="text-align: center">Name</th>
            <th style="text-align: center">Manager Name</th>
            <th style="text-align: center">Update</th>
            <th style="text-align: center">Info</th>
        </tr>
    </thead>
    <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Manager</td>
                    <td class="text-center">
                        <a asp-controller="Track" asp-action="Update" asp-route-id="@item.Id" class="btn btn-info">
                            Edit
                        </a>
                    </td>
                    <td class="text-center">
                        <a onclick="Details(@item.Id)" class="btn btn-info">
                            Show Instructors
                        </a>
                    </td>
                </tr>
            }
    </tbody>
</table>
<div class="d-grid gap-2 col-6 mx-auto mt-5">
    <a asp-controller="Track" asp-action="Create" class="btn btn-primary">Add New</a>
</div>


<div id="div1" class="mt-5"></div>
<script>

    function Details(id)
    {
        $.ajax({
            url : '/Instructor/GetInstInTrack/' + id,
            //data : { 'id' : id },
            success : function(result) {              
                $("#div1").html(result);
            }
        });
    };
</script>